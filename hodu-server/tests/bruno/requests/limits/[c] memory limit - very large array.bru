meta {
  name: [c] memory limit - very large array
  type: http
  seq: 1
}

post {
  url: {{baseURL}}/api/v1/submit
  body: json
  auth: none
}

body:json {
  {
    "language": "c",
    "code": "#include <stdlib.h>\nint main() { for (int i = 0; i < 100000000; i++) { int* p = (int *)malloc(sizeof(int)); } }",
    "stdin": "",
    "expected_stdout": "",
    "fields": ["*"]
  }
}

assert {
  res.status: eq 200
  res.body.status: eq MEMORY_LIMIT_EXCEEDED
}
