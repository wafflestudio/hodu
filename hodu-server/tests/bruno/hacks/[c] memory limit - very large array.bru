meta {
  name: [c] memory limit - very large array
  type: http
  seq: 3
}

post {
  url: http://127.0.0.1:8080/api/v1/submit
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "language": "c",
    "code": "#include <stdlib.h>\n#include <stdio.h>\nint main() { int size = 100000000000; int *p = (int *)malloc(sizeof(int) * size); p[size - 1] = 3; printf(\"%d\", p[size - 1]); }"
  }
}

assert {
  res.status: eq 200
  res.body.stderr: eq Caught fatal signal 11\n
}
